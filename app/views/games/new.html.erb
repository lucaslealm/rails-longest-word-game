<h1>New Game</h1>
<% @letters.each do |letter| %>
<h2 class="letter-list"><%= letter %></h2>
<% end %>
<br>
<br>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="word">What is the longest word you can think of with the letters above?</label>
<br>
<br>
  <input type="text" name="word" placeholder="Type the word">
  <input type="submit">
</form>
